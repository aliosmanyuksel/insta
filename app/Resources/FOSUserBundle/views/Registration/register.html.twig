{% extends "FOSUserBundle::layout.html.twig" %}
{% block fos_user_content %}
<div class="modal-dialog" style="padding-top: 60px;
  max-width: 400px;">
    <div class="modal-content">
        <div class="modal-header text-center">
            <h1>Регистрация</h1>
        </div>
    <div class="modal-body">
        <form class="form-horizontal text-center" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
            <div style="padding-top: 15px;">
                {{ form_errors(form.email) }}
                <label for="email">Email:</label>
                {{ form_widget(form.email) }}
            </div>
            <div style="padding-top: 15px;">
                {{ form_errors(form.username) }}
                <label for="username">Имя пользователя:</label>
                {{ form_widget(form.username) }}
            </div>
            <div style="padding-top: 15px;">
                {{ form_errors(form.plainPassword.first) }}
                <label for="email">Пароль:</label>
                {{ form_widget(form.plainPassword.first) }}
            </div>
            <div style="padding-top: 15px;">
                {{ form_errors(form.plainPassword.second) }}
                <label for="email">Повторите пароль:</label>
                {{ form_widget(form.plainPassword.second) }}
            </div>
            <input style="margin-top: 15px;" class="btn btn-success" type="submit" id="_submit" name="_submit" value="Зарегистрироваться" />
            {{ form_end(form) }}

        </form>
    </div>
    </div>
    </div>
{% endblock %}

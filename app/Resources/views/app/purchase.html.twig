                <input type="hidden" name="targets" value="instastellar">
                <input type="hidden" name="sum" value="3999.00" data-type="number" >
                </form>
            </div>
        </div>
    </div>
    {% if (user.validUntil| date('U')) < ('now' | date('U')) %}
        <p style="color: red;">Срок действия Вашего аккаунта истек</p>
    {% else %}
        <p>Ваш аккаунт действителен до: {{ user.validUntil | date("H:00 d/m/Y", user.timezone) }}</p>
    {% endif %}
    <style>
        .box{
            width: 90%;
            background-color: #428BCA;
            margin: 0 auto;
            color: white;
        }
        .btn-purchase{
            width: 80%;
            height: 50px;
            color: white;
            border: 0;
            margin-bottom: 15px;
            background-color: rgb(232, 12, 113);
        }
        .payment-option{
            color: black;
            margin-bottom: 5px;
        }
        .payment-h2{
            padding-top: 15px;
        }
        .payment-p{
            padding-left: 20px;
            padding-right: 20px;
        }
    </style>

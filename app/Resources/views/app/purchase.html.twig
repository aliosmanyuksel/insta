                </select>
                <input class="btn-purchase" type="submit" name="submit-button" value="Купить">

                <input type="hidden" name="receiver" value="410013109261032">
                <input type="hidden" name="formcomment" value="Подписка instastellar 3 мес">
                <input type="hidden" name="short-dest" value="Подписка instastellar 3 мес">
                <input type="hidden" name="quickpay-form" value="shop">
                <input type="hidden" name="label" value="{{ user.id }}">
                <input type="hidden" name="targets" value="instastellar">
                <input type="hidden" name="sum" value="1999.00" data-type="number" >
                </form>
            </div>
        </div>
        <div class="col-xs-4">
            <div class="box">
                <form method="POST" action="https://money.yandex.ru/quickpay/confirm.xml">
                <h2 class="payment-h2">SMM-Pro 7 мес!</h2>
                <img src="/img/rocket3.png">
                <p class="payment-p">Подписка на Pro версию за 3999 р/мес</p>
                <select class="payment-option" name="paymentType" >
                    <option value="AC">Банковской картой</option>

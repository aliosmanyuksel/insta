{% extends 'base.html.twig' %}
{% block body %}
<h1>Покупка</h1>
    <div class="row text-center">
        <div class="col-xs-4">
            <div class="box">
                <form method="POST" action="https://money.yandex.ru/quickpay/confirm.xml">
                    <h2 class="payment-h2">К открытию 1 мес!</h2>
                    <img src="/img/rocket1.png">
                    <p class="payment-p">Подписка на Pro версию за 790 р</p>
                    <select class="payment-option" name="paymentType" >
                        <option value="AC">Банковской картой</option>
                        <option value="PC">Яндекс.Деньгами</option>
                    </select>
                    <input class="btn-purchase" type="submit" name="submit-button" value="Купить">

                    <input type="hidden" name="receiver" value="410012531831875">
                    <input type="hidden" name="formcomment" value="Подписка instastellar 1 мес">
                    <input type="hidden" name="short-dest" value="Подписка instastellar 1 мес">
                    <input type="hidden" name="quickpay-form" value="shop">
                    <input type="hidden" name="label" value="{{ user.id }}">
                    <input type="hidden" name="targets" value="instastellar">
                    <input type="hidden" name="sum" value="790.00" data-type="number" >
                </form>
            </div>
        </div>
        <div class="col-xs-4">
            <div class="box">
                <form method="POST" action="https://money.yandex.ru/quickpay/confirm.xml">
                <h2 class="payment-h2">Базовый 3 мес!</h2>
                <img src="/img/rocket2.png">
                <p class="payment-p">Подписка на Pro версию за 1999 р</p>
                <select class="payment-option" name="paymentType" >
                    <option value="AC">Банковской картой</option>
                    <option value="PC">Яндекс.Деньгами</option>
                </select>
                <input class="btn-purchase" type="submit" name="submit-button" value="Купить">

                <input type="hidden" name="receiver" value="410012531831875">
                <input type="hidden" name="formcomment" value="Подписка instastellar 3 мес">
                <input type="hidden" name="short-dest" value="Подписка instastellar 3 мес">
                <input type="hidden" name="quickpay-form" value="shop">
                <input type="hidden" name="label" value="{{ user.id }}">
                <input type="hidden" name="targets" value="instastellar">
                <input type="hidden" name="sum" value="1999.00" data-type="number" >
                </form>
            </div>
        </div>
        <div class="col-xs-4">
            <div class="box">
                <form method="POST" action="https://money.yandex.ru/quickpay/confirm.xml">
                <h2 class="payment-h2">SMM-Pro 7 мес!</h2>
                <img src="/img/rocket3.png">
                <p class="payment-p">Подписка на Pro версию за 3999 р</p>
                <select class="payment-option" name="paymentType" >
                    <option value="AC">Банковской картой</option>
                    <option value="PC">Яндекс.Деньгами</option>
                </select>
                <input class="btn-purchase" type="submit" name="submit-button" value="Купить">

                <input type="hidden" name="receiver" value="410012531831875">
                <input type="hidden" name="formcomment" value="Подписка instastellar 7 мес">
                <input type="hidden" name="short-dest" value="Подписка instastellar 7 мес">
                <input type="hidden" name="quickpay-form" value="shop">
                <input type="hidden" name="label" value="{{ user.id }}">
                <input type="hidden" name="targets" value="instastellar">
                <input type="hidden" name="sum" value="3999.00" data-type="number" >
                </form>
            </div>
        </div>
    </div>
    {% if (user.validUntil| date('U')) < ('now' | date('U')) %}
        <p style="color: red;">Срок действия Вашего аккаунта истек</p>
    {% else %}
        <p>Ваш аккаунт действителен до: {{ user.validUntil | date("H:00 d/m/Y", user.timezone) }}</p>
    {% endif %}
    <style>
        .box{
            width: 90%;
            background-color: #428BCA;
            margin: 0 auto;
            color: white;
        }
        .btn-purchase{
            width: 80%;
            height: 50px;
            color: white;
            border: 0;
            margin-bottom: 15px;
            background-color: rgb(232, 12, 113);
        }
        .payment-option{
            color: black;
            margin-bottom: 5px;
        }
        .payment-h2{
            padding-top: 15px;
        }
        .payment-p{
            padding-left: 20px;
            padding-right: 20px;
        }
    </style>

{% endblock %}
    <script>
        $( document ).ready(function() {
            $('#likebygeo_tags').val($('#lat').val() + ';' + $('#lng').val() + ';' + $('#radius').val());

            var spb = new google.maps.LatLng(59.94, 30.34);
            var map;
            var circle;

            function initialize() {
                var mapOptions = {
                    zoom: 10,
                    center: spb
                };

                map = new google.maps.Map(document.getElementById('map-canvas'),
                        mapOptions);

                var options = {
                    strokeColor: '#FF0000',
                    strokeOpacity: 0.8,
                    strokeWeight: 2,
                    fillColor: '#FF0000',
                    fillOpacity: 0.35,
                    map: map,
                    center: spb,
                    editable: true,
                    draggable: true,
                    radius: 1000
                };
                circle = new google.maps.Circle(options);
                google.maps.event.addListener(circle, 'radius_changed', function () {
                    $('#radius').val(circle.getRadius());
                    $('#likebygeo_tags').val($('#lat').val() + ';' + $('#lng').val() + ';' + $('#radius').val());
                });
                google.maps.event.addListener(circle, 'center_changed', function () {
                    $('#lat').val(circle.getCenter()['A']);
                    $('#lng').val(circle.getCenter()['F']);
                    $('#likebygeo_tags').val($('#lat').val() + ';' + $('#lng').val() + ';' + $('#radius').val());
                });
            }

            google.maps.event.addDomListener(window, 'load', initialize);


            $('.lat-lng').bind("change paste keyup", function () {
                circle.setCenter(new google.maps.LatLng($('#lat').val(), $('#lng').val()));
                circle.setRadius(parseInt($('#radius').val()));
                $('#likebygeo_tags').val($('#lat').val() + ';' + $('#lng').val() + ';' + $('#radius').val());
            })
        })

    </script>
    <style>
        html, body, #map-canvas {
            height: 80%;
            margin: 0px;
            padding: 0px;
            margin-bottom: 20px;
        }
        .modal-error{
            margin-bottom: 0px;
            color: red;
        }
    </style>
{% endblock %}
{% trans_default_domain 'landing' %}

{% block head_style %}
    <link href='http://fonts.googleapis.com/css?family=Lobster&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/css/roboto-condensed.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/landing_base.css?ver2">
    <script src="//code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="/js/transition.js"></script>
    <script src="/js/collapse.js"></script>
{% endblock head_style %}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>Instastellar</title>
    <link rel="shortcut icon" type="image/x-icon" href="/img/title.ico" />
</head>

<header>
    <nav class="navbar navbar-default navbar-fixed-top" style="border: none;">
          <!--
        <div class="container" style="border: none; padding-left:0">
        -->
        <div class="col-xs-9 col-sm-12 col-md-3 col-lg-2">
            <a href="{{ path('homepage') }}#main" style="padding-right: 0;"><img class="logo" src="/img/instastellar_header.png"/></a>
        </div>

        <div class="nav navbar-nav col-sm-12 col-md-9 col-lg-10" style="padding-right: 0;">
            <div style="padding-right:15px;">
                <button type="button" class="navbar-toggle collapsed col-xs-3" style="width:auto; margin-top:0;" data-toggle="collapse" data-target="#collapsive-nav">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
                <div class="collapse navbar-collapse col-xs-12 col-lg-12" style="width:100% " id="collapsive-nav">
                    <ul class="nav navbar-nav" style="border:none;">
                        <li><a href="{{ path('homepage') }}#main"><p>{{ 'menu.main'|trans }}</p></a></li>
                        <li><a href="{{ path('homepage') }}#poss"><p>{{ 'menu.possability'|trans }}</p></a></li>
                        <li><a href="{{ path('homepage') }}#promote"><p>{{ 'menu.whattodo'|trans }}</p></a></li>
                        <li><a href="{{ path('homepage') }}#why"><p>{{ 'menu.whyus'|trans }}</p></a></li>
                        <li><a href="{{ path('homepage') }}#contacts"><p>{{ 'menu.contacts'|trans }}</p></a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right" style="border:none; padding-right: 20px;">
                        <li>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a href="{{ path('accounts') }}"><p style="font-size: 11pt;">{{ 'menu.office'|trans }}</p></a>
                        {% else %}
                            <a href="{{ path("fos_user_security_login")}}"><p>{{ 'menu.login'|trans }}</p></a>
                        {% endif %}
                        </li>
                        <li><a href="{{ path("change_locale") }}">
                                {% if app.request.locale != 'ru' %}
                                    <img class="flag" src="img/flag_ru.png">
                                {% else %}
                                    <img class="flag" src="img/flag_uk.png">
                                {% endif %}
                            </a></li>
                    </ul>
                </div>
            </div>
        <!--
        </div>
        -->
    </nav>
</header>
{% block content %}
{% endblock %}
